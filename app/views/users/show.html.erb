<div class="container">
    <div class="row">
		<h3 class="left">Welcome, <%= @user.first_name %>!</h3>
	</div>
	<div class="row section">
		<!-- USER PHOTO -->
		<img src="<%= @user.avatar.url %>" alt="User Photo" id="user_photo" class="col s8 push-s2 m3 l3">
		<!-- USER PROFILE INFO -->
		<div id="profile_info" class="col s12 m9 l9 border">
			<a href="/users/<%= @user.id %>/edit" class="waves-effect waves-light btn-large edit_button">Edit Your Profile</a>
			<br>
			<a href="/personal/<%= @user.id %>/edit" class="waves-effect waves-light btn-large edit_button">Edit Your Questions</a>
		</div>
	</div>

<% if flash[:answered] %>
<%= flash[:answered] %>
<% end %>
	<h2>Your matches:</h2>
	<div class="row">
		<% if @matched_user %>
		<% if @questions %>

		<% @questions.each do |q| %>
		<% @matched_user.each do |c| %>
		<div class="col s12 m4 l4">
			<div class="card">
				<div class="card-image">
		            <img src="<%= c.avatar.url %>" alt="Profile Image" class="border materialboxed">
		            <span class="card-title"><%= c.first_name %></span>
	            </div>
	            <div class="match-links">
					<div class="match-link">
						<a href="/users/<%= c.id %>/profile" class="center_align">Profile</a>
					</div>
					<% if c.answered(c.id, current_user.id) == false %>
					<div class="match-link">
						<a href="/questions/<%= c.id %>" class="center_align">Questions</a>
					</div>
					<% end %>
				</div>
			
				<div class="match-content">
					<ul class="answer collapsible" data-collapsible="accordion">
						<li>
							<div class="collapsible-header">
								<%= q.q1 %>
							</div>
							
							<div class="collapsible-body" style="display: none;"> 
						 
								<p>
									<b><%= q.user_answer1(c.id) %></b>
								</p>
						
							</div>						
						</li>
						<li>
							<div class="collapsible-header">
								<%= q.q2 %>
							</div>
							<div class="collapsible-body" style="display: none;"> 
							
								<p>
									<b><%= q.user_answer2(c.id) %></b>
								</p>
							
							</div>
						</li>
						<li>
							<div class="collapsible-header">
								<%= q.q3 %>
							</div>
							<div class="collapsible-body" style="display: none;"> 
								<p>
									<b><%= q.user_answer3(c.id) %></b>
								</p>
							</div>


						</li>
					</ul>

					<% if @match1 != 2%> 
					<a href=""><i class="small material-icons yes_vote">thumb_up</i></a>
					<a href=""><i class="small material-icons no_vote">thumb_down</i></a>
					<% else %>
					<a href="" class="waves-effect waves-light btn open_chat"><i class="material-icons left">chat_bubble_outline</i>Open Chat</a>
					<% end %>

				</div>

			</div>

		</div>
		<% end %>
		<% end %>
		<% end %>
		<% end %>
	</div>				
</div>
